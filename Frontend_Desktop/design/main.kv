<MainScreen>:
    MDAnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        size_hint: 1, 1
        MDBoxLayout:
            orientation: 'vertical'
            adaptive_height: True
            size_hint_x: 0.8
            size_hint_max_x: 600
            spacing: 50
            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height: True
                size_hint_x: 1
                MyLabel:
                    text: 'Username'
                    text_color: (1, 1, 1, 1)
                MDTextField:
                    id: username
                    size_hint_x: 1
                    hint_text: 'Enter your username'
            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height: True
                size_hint_x: 1
                MyLabel:
                    text: 'Password'
                    text_color: (1, 1, 1, 1)
                MDTextField:
                    id: password
                    size_hint_x: 1
                    hint_text: 'Enter your password'
            MDRaisedButton:
                text: 'Login'
                size_hint_x: 1
                md_bg_color: (0, 0.5, 1, 1)
                on_press: root.login()